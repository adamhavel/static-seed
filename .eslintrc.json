{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "System": false,
        "Modernizr": false
    },
    "rules": {
        "brace-style": 2,
        "indent": 2,
        "eqeqeq": [2, "smart"],
        "no-console": 1
    }
}
